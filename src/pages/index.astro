import Layout from '@/layouts/Layout.astro';
---

<Layout title="Celebra.me | Organizador de Eventos">
  <div class="flex flex-col gap-0">
    <section class="min-h-screen flex items-center justify-center bg-gray-50">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-serif text-primary mb-6">Celebra.me</h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Simplificamos la planificación de tus momentos más importantes.
        </p>
        <a href="/xv/estefania-anguamea" class="inline-block bg-primary text-white px-8 py-3 rounded-full hover:bg-yellow-600 transition">
          Ver Demo XV Años
        </a>
      </div>
    </section>
  </div>
</Layout>
