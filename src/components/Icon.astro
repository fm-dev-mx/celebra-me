---
import type { Icon } from "@/config/landing.interface";
import CommitmentIcon from "@/icons/aboutUs/CommitmentIcon.astro";
import EasyUseIcon from "@/icons/aboutUs/EasyUseIcon.astro";
import ExclusiveIcon from "@/icons/aboutUs/ExclusiveIcon.astro";
import ArrowDownIcon from "@/icons/commons/ArrowDownIcon.astro";
import CelebrameIcon from "@/icons/commons/CelebrameIcon.astro";
import CheckIcon from "@/icons/commons/CheckIcon.astro";
import ToastIcon from "@/icons/commons/ToastIcon.astro";
import AnniversaryIcon from "@/icons/services/AnniversaryIcon.astro";
import BriefcaseIcon from "@/icons/services/BriefcaseIcon.astro";
import CakeIcon from "@/icons/services/CakeIcon.astro";
import CrownIcon from "@/icons/services/CrownIcon.astro";
import GraduationCapIcon from "@/icons/services/GraduationCapIcon.astro";
import WeddingIcon from "@/icons/services/WeddingIcon.astro";
import FacebookIcon from "@/icons/socials/FacebookIcon.astro";
import GithubIcon from "@/icons/socials/GithubIcon.astro";
import InstagramIcon from "@/icons/socials/InstagramIcon.astro";
import LinkedInIcon from "@/icons/socials/LinkedInIcon.astro";

interface Props {
	icon: Icon;
	class?: string;
}

const { icon, class: className } = Astro.props;

const icons = [
	CheckIcon,
	FacebookIcon,
	GithubIcon,
	InstagramIcon,
	LinkedInIcon,
	WeddingIcon,
	CakeIcon,
	BriefcaseIcon,
	GraduationCapIcon,
	CrownIcon,
	AnniversaryIcon,
	CelebrameIcon,
	ExclusiveIcon,
	EasyUseIcon,
	CommitmentIcon,
	ToastIcon,
	ArrowDownIcon
];

let figures: Record<string, (_props: Record<string, unknown>) => unknown> = {};

icons.map((item) => {
	figures[item.name] = item;
});

const Figure = figures[icon];
---

{Figure ? <Figure class:list={[className]} /> : <p>Icon not found</p>}
