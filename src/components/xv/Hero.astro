---
import '@/styles/xv/_hero.scss';
import bgHero from '@images/hero/bgHeroDesktop.jpg';

interface Props {
	name: string;
	date: string;
}

const { name, date } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('es-MX', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<section class="xv-hero">
	<div class="xv-hero__background">
		<img
			src={bgHero.src}
			alt="Fiesta de XV años"
			class="xv-hero__background-image"
		/>
		<div class="xv-hero__background-overlay"></div>
	</div>

	<div class="xv-hero__content">
		<span class="xv-hero__label">Mis XV Años</span>
		<h1 class="xv-hero__title">{name}</h1>
		<div class="xv-hero__divider"></div>
		<p class="xv-hero__date">{formattedDate}</p>
	</div>
</section>
