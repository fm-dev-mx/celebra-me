---
// src/components/xv/ThankYou.astro
// Closing section with gratitude message for XV AÃ±os invitations

import OptimizedImage from '@components/common/OptimizedImage.astro';
import '@/styles/xv/_thank-you.scss';

interface Props {
	message: string;
	closingName: string;
	image?: string;
}

const { message, closingName, image } = Astro.props;
---

<section id="thank-you-section" class="thank-you-section">
	<div class="thank-you-content">
		{image && (
			<div class="photo-frame">
				<OptimizedImage
					imagePath={image}
					alt={closingName}
					width={200}
					height={200}
					class="photo-image"
				/>
			</div>
		)}

		<div class="message-container">
			<p class="thank-you-message">
				{message}
			</p>
			<p class="closing-name">
				{closingName}
			</p>
		</div>
	</div>
</section>
