---
// src/components/xv/ThankYou.astro
// Closing section with gratitude message for XV AÃ±os invitations

import OptimizedImage from '@components/common/OptimizedImage.astro';

interface Props {
	message: string;
	closingName: string;
	image?: string;
}

const { message, closingName, image } = Astro.props;
---

<section id="thank-you-section" class="thank-you-section">
	<div class="thank-you-content">
		{image && (
			<div class="photo-frame">
				<OptimizedImage
					imagePath={image}
					alt={closingName}
					width={200}
					height={200}
					class="photo-image"
				/>
			</div>
		)}

		<div class="message-container">
			<p class="thank-you-message">
				{message}
			</p>
			<p class="closing-name">
				{closingName}
			</p>
		</div>
	</div>
</section>

<style lang="scss">
	@use '../../styles/global/mixins' as mixins;
	@use '../../styles/xv/variables.xv' as *;

	.thank-you-section {
		position: relative;
		padding: 4rem 1rem;
		min-height: 60vh;
		display: flex;
		justify-content: center;
		align-items: center;
		background: linear-gradient(
			180deg,
			rgba($color-white, 0.95) 0%,
			rgba($color-secondary-light, 0.3) 100%
		);
		overflow: hidden;

		// Subtle decorative overlay
		&::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: radial-gradient(
				ellipse at center,
				rgba($color-secondary, 0.1) 0%,
				transparent 70%
			);
			pointer-events: none;
		}
	}

	.thank-you-content {
		position: relative;
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		max-width: 700px;
		margin: 0 auto;
		padding: 0 1rem;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeInUp 1s ease-out 0.3s forwards;
	}

	.photo-frame {
		width: 180px;
		height: 180px;
		border: 3px solid rgba($color-secondary-dark, 0.3);
		border-radius: 50%;
		overflow: hidden;
		box-shadow:
			0 4px 20px rgba($color-secondary-dark, 0.2),
			0 0 0 6px rgba($color-secondary-light, 0.5);
		transition: transform 0.3s ease, box-shadow 0.3s ease;

		@include mixins.respond-to(sm) {
			width: 220px;
			height: 220px;
		}

		&:hover {
			transform: scale(1.03);
			box-shadow:
				0 8px 30px rgba($color-secondary-dark, 0.3),
				0 0 0 8px rgba($color-secondary-light, 0.6);
		}

		:global(.photo-image) {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: transform 0.3s ease;
		}

		&:hover :global(.photo-image) {
			transform: scale(1.08);
		}
	}

	.message-container {
		text-align: center;
		max-width: 550px;
	}

	.thank-you-message {
		font-family: $font-heading-formal;
		font-size: clamp(1rem, 2.5vw, 1.2rem);
		line-height: 1.8;
		color: $color-dark;
		margin: 0 0 1.5rem 0;
		letter-spacing: 0.02em;

		@include mixins.respond-to(sm) {
			font-size: 1.15rem;
		}
	}

	.closing-name {
		font-family: $font-decorative-cursive;
		font-size: clamp(1.8rem, 4vw, 2.5rem);
		color: $color-secondary-dark;
		margin: 0;
		opacity: 0.9;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
