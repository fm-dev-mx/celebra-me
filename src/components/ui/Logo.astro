---
interface Props {
	variant?: 'default' | 'xv' | 'footer' | 'hero';
	class?: string;
	altText?: string;
}

import { getCommonAsset } from '@/lib/assets/AssetRegistry';

const { class: className } = Astro.props;

// Currently using the same logo for both variants, can be customized later
const logoAsset = getCommonAsset('headerLogo');
const logoSrc = typeof logoAsset.src === 'string' ? logoAsset.src : logoAsset.src.src;
---

<img
	src={logoSrc}
	alt="Celebra.me Logo"
	width="150"
	height="56"
	class:list={['h-auto w-32 md:w-40', className]}
/>
