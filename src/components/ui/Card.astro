---
// src/components/ui/Card.astro
import '@/styles/ui/_card.scss';

interface Props {
	class?: string;
	extraClass?: string;
	href?: string;
	// Minimal props passed through to class list if needed,
	// but strictly we prefer using `class` for styling.
	[key: string]: unknown;
}

const {
	class: className,
	extraClass = '',
	href,
	...rest
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
	href={href}
	class:list={[
		'card-base',
		className,
		extraClass,
	]}
	{...rest}
>
	<slot />
</Tag>
