---
interface Props {
	bgColor?: string;
	borderColor?: string;
	textColor?: string;
	hover?: string;
}

const props = Astro.props as Props;
const {
	bgColor = "bg-white",
	borderColor = "border-primary",
	textColor = "text-primary-light",
	hover = "hover:brightness-105",
} = props;
---

<article
	class:list={[
		bgColor,
		"border-2",
		borderColor,
		textColor,
		"rounded-lg",
		"shadow-2xl",
		"p-5",
		"min-w-xs",
		"max-w-xs",
		"min-h-sm",
		"max-h-sm",
		hover,
	]}
>
	<div class="flex basis-1 flex-col content-center items-center text-center">
		<slot />
	</div>
</article>
