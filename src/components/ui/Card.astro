---
import { twMerge } from "tailwind-merge";

// Interface for the Card component props
interface CardProps {
	bgColor?: string; // Background color of the card
	borderColor?: string; // Border color of the card
	textColor?: string; // Text color of the card content
	minWidth?: string; // Maximum width of the card
	minHeight?: string; // Minimum height of the card
	hoverEffect?: string; // Hover effect classes
	extraClasses?: string; // Additional custom classes
}

// Default prop values for flexibility and consistency
const {
	bgColor = "bg-white",
	borderColor = "border-primary",
	textColor = "text-primary-light",
	minWidth = "max-w-xs",
	minHeight = "min-h-[200px]",
	hoverEffect = "hover:brightness-110",
	extraClasses = "",
} = Astro.props as CardProps;

// Combining classes using twMerge for clean and conflict-free styles
const cardClasses = twMerge(
	bgColor,
	"border-2", // Consistent border width
	borderColor,
	textColor,
	"rounded-lg shadow-2xl p-5", // Standard padding, shadow, and rounded corners
	hoverEffect,
	extraClasses,
	"transition-all duration-300", // Smooth transitions for hover effects
	"flex flex-col justify-between items-center", // Flex layout for content positioning
	minHeight,
	minWidth,
	"w-full flex-grow flex-shrink-0", // Responsive width and flexible grow/shrink
);
---

<!-- Render the card with a structured layout -->
<article class={cardClasses}>
	<div class="flex flex-col w-full h-full items-center text-center m-auto">
		<!-- Optional space or placeholder for future content -->
		<div class="mb-3"></div>
		<!-- Main slot for card content -->
		<slot />
	</div>
</article>
