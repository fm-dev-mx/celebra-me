---
import Icon from "@/components/common/Icon.astro";
import IconWrapper from "@/components/common/IconWrapper.astro";
import type { Icon as IconType, Service } from "@/config/landing.interface";
import Paragraph from "../common/Paragraph.astro";
import SectionSubtitle from "../typography/SectionSubtitle.astro";

// Define the props interface for type safety
interface Props {
	service: Service;
	key: number;
}

// Destructure the service prop
const { service, key } = Astro.props;

// Define reusable styles
const styles = {
	article:
		"flex flex-col items-center justify-center transition-transform transform hover:scale-105 w-92",
	container: "flex flex-col items-center max-w-80",
	iconContainer: "mt-6 mb-4",
	textContainer: "flex flex-col items-center text-center",
};
---

<article class={styles.article}>
	<div class={styles.container}>
		<!-- Service Icon -->
		<div class={styles.iconContainer}>
			<IconWrapper background="bg-secondary-dark" size="h-12 w-12" padding="p-3">
				<Icon icon={service.icon as IconType} size="h-full w-full" color="text-white" />
			</IconWrapper>
		</div>

		<!-- Service Details -->
		<div class={styles.textContainer}>
			<SectionSubtitle
				size="text-2xl md:text-3xl"
				color="text-secondary-dark"
				letterSpacing="tracking-wide"
				margin="mb-2"
			>
				{service.title}
			</SectionSubtitle>
			<Paragraph
				size="text-base"
				textColor="text-secondary-dark"
				weight="font-thin"
				padding="px-2 md:px-4"
				maxWidth="max-w-max"
			>
				{service.description}
			</Paragraph>
		</div>
	</div>
</article>
