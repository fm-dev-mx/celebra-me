---
interface Props {
	margin?: string;
	size?: string;
	align?: string;
	color?: string;
	weight?: string;
	textDecoration?: string;
}

const props = Astro.props as Props;
const {
	margin = "mb-24",
	align = "text-center",
	size = "text-3xl md:text-4xl",
	color = "",
	weight = "font-light",
	textDecoration = "",
} = props;
---

<h2 class:list={[margin, align, size, color, weight, textDecoration]}><slot /></h2>
