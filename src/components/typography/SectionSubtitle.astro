---
interface Props {
	size?: string;
	fontFamily?: string;
	weight?: string;
	color?: string;
	extraClass?: string;
}

const props = Astro.props as Props;

const {
	size = "text-2xl md:text-3xl",
	weight = "font-thin",
	color = "",
	fontFamily = "sans-serif",
	extraClass = "",
} = props;
---

<h3 class={`text-center ${size} ${weight} ${color} ${fontFamily} ${extraClass}`}><slot /></h3>
