---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"svg"> & {
	primaryColor?: string;
	secondaryColor?: string;
};

const {
	primaryColor = "currentColor",
	secondaryColor = "currentColor",
	class: className,
	...rest
} = Astro.props;
---

{/* MenuIcon: Circular menu icon with three dots */}
<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 24 24"
	class={className}
	aria-hidden="true"
	fill="none"
	stroke-width="1.5"
	{...rest}
>
	<path
		stroke={primaryColor}
		d="M9 12a1 1 0 1 1-2 0 1 1 0 0 1 2 0Zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0Zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0Z"
	></path>
	<path stroke={secondaryColor} d="M7 3.34A10 10 0 1 1 3.34 7"></path>
</svg>
