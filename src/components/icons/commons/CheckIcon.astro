---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"svg">;

const { class: className, ...rest } = Astro.props;
---

{/* CheckIcon: Displays a stylized checkmark or "completed" symbol */}
<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 24 24"
	class={className}
	aria-hidden="true"
	fill="none"
	stroke="currentColor"
	stroke-width="2"
	stroke-linecap="round"
	stroke-linejoin="round"
	{...rest}
>
	{
		/*
    Three-part checkmark path:
    1. Main checkmark
    2. Small checkmark (bottom-left)
    3. Partial checkmark (top-right)
  */
	}
	<path
		d="M7 12L11.9497 16.9497L22.5572 6.34326M2.0498 12.0503L6.99955 17M17.606 6.39355L12.3027 11.6969"
	></path>
</svg>
