---
// src/components/Footer.astro

/* Moved from src/frontend/sections/Footer.astro */
const currentYear = new Date().getFullYear();
---

<footer class="footer">
	<div class="footer-grid container-custom">
		<div>
			<h3 class="footer-brand">Celebra.me</h3>
			<p class="footer-text">
				Creando momentos inolvidables para tus celebraciones más especiales.
			</p>
		</div>

		<div>
			<h4 class="footer-heading">Enlaces</h4>
			<ul class="footer-links">
				<li><a href="/#services" class="footer-link">Servicios</a></li>
				<li><a href="/#about" class="footer-link">Nosotros</a></li>
				<li><a href="/privacy" class="footer-link">Privacidad</a></li>
			</ul>
		</div>

		<div>
			<h4 class="footer-heading">Contacto</h4>
			<p class="footer-text">hola@celebra.me</p>
			<div class="footer-social">
				<a href="#" aria-label="Facebook" class="footer-link">FB</a>
				<a href="#" aria-label="Instagram" class="footer-link">IG</a>
			</div>
		</div>
	</div>

	<div class="footer-bottom container-custom">
		© {currentYear} Celebra.me. Todos los derechos reservados.
	</div>
</footer>

<style lang="scss">
	.footer {
		background-color: #111827;
		color: #fff;
		padding: 3rem 0;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;

		@media (min-width: 768px) {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	.footer-brand {
		font-size: 1.25rem;
		font-family: serif;
		margin-bottom: 1rem;
	}

	.footer-heading {
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.footer-text {
		color: #9ca3af;
		font-size: 0.875rem;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;

		li {
			margin-bottom: 0.5rem;
		}
	}

	.footer-link {
		color: #9ca3af;
		font-size: 0.875rem;
		text-decoration: none;
		transition: color 0.2s ease;

		&:hover {
			color: var(--color-primary);
		}
	}

	.footer-social {
		display: flex;
		gap: 1rem;
		margin-top: 1rem;
	}

	.footer-bottom {
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid #1f2937;
		text-align: center;
		color: #6b7280;
		font-size: 0.75rem;
	}
</style>
