---
export interface InputProps {
	label: string;
	type: "text" | "email" | "password" | "number";
	placeholder?: string;
	required?: boolean;
	value?: string;
	onInput?: (event: Event) => void;
}

// Destructure props for easier access
const { label, type, placeholder, required, value, onInput } = Astro.props as InputProps;
---

<!-- Input Field Component -->
<div class="flex flex-col">
	<!-- Label for the input field -->
	<label class="text-sm font-medium text-primary mb-2">
		{label}
	</label>

	<!-- Input element with binding to value and input event -->
	<input
		type={type}
		class="border border-gray-300 rounded-md p-2 text-gray-700 focus:ring-2 focus:ring-primary focus:outline-none"
		placeholder={placeholder}
		required={required}
		value={value}
	/>
</div>
