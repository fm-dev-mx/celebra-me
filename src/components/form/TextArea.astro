---
export interface TextAreaProps {
	label: string;
	placeholder?: string;
	required?: boolean;
	rows?: number;
	value?: string;
}

// Destructure props for easier access
const { label, placeholder, required, rows = 4, value } = Astro.props;
---

<!-- TextArea Field Component -->
<div class="flex flex-col">
	<!-- Label for the textarea -->
	<label class="text-sm font-medium text-primary mb-2">
		{label}
	</label>

	<!-- TextArea element with binding to value and input event -->
	<textarea
		class="border border-gray-300 rounded-md p-2 text-gray-700 focus:ring-2 focus:ring-primary focus:outline-none"
		placeholder={placeholder}
		required={required}
		rows={rows}
		value={value}></textarea>
</div>
