---
import ActionIcon from '@components/common/actions/ActionIcon.astro';
import Container from '@components/layout/Container.astro';
import Section from '@components/layout/Section.astro';
import SectionTitle from '@components/typography/SectionTitle.astro';
import FAQList from '@components/ui/FAQList.tsx';

import type { FAQData } from '@/interfaces/ui/sections/landing-page.interface';

interface Props {
	data: FAQData;
}

// Destructure the data prop
const { data } = Astro.props;
---

<!-- FAQ Section -->
<Section id="faq-section" fullHeight={true}>
	<Container>
		<!-- Section Title -->
		<SectionTitle color="text-secondary-dark">
			{data.title}
		</SectionTitle>

		<!-- FAQ List Component (React component with client-side rendering) -->
		<FAQList client:visible {...data} color="secondary" />

		<!-- Scroll Action to return to pricing section -->
		<ActionIcon
			icon="ArrowDownIcon"
			variant="scroll"
			href="#contact-section"
			color="secondary"
			title="Ir a secciÃ³n de Contacto"
		/>
	</Container>
</Section>
