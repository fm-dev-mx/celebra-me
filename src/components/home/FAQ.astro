---
import ActionIcon from '@components/common/actions/ActionIcon.astro';
import FAQList from '@components/ui/FAQList.tsx';

import type { FAQData } from '@/interfaces/ui/sections/landing-page.interface';

interface Props {
	data: FAQData;
}

// Destructure the data prop
const { data } = Astro.props;
---

<!-- FAQ Section -->
<section id="faq-section" class="faq-section">
	<div class="faq-noise"></div>

	<div class="container">
		<header class="faq-header">
			<span class="faq-pretitle">Claridad en cada detalle</span>
			<h2 class="faq-title">{data.title}</h2>
			<p class="faq-subtitle">
				Resolvemos sus dudas para que pueda concentrarse en lo más importante: su celebración.
			</p>
		</header>

		<!-- FAQ List Component (React component with client-side rendering) -->
		<FAQList client:visible faqs={data.faqs} />

		<!-- Scroll Action to return to contact section -->
		<div class="faq-footer">
			<ActionIcon
				icon="ArrowDownIcon"
				variant="scroll"
				href="#contact-section"
				color="primary"
				title="Ir a sección de Contacto"
			/>
		</div>
	</div>
</section>
