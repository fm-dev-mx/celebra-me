---
// src/sections/Contact.astro
import Container from '@components/layout/Container.astro';
import StyledContainer from '@components/layout/StyledContainer.astro';
import Section from '@components/layout/Section.astro';
import ContactForm from '@components/ui/ContactForm.tsx';
import ActionIcon from '@components/common/actions/ActionIcon.astro';
import type { ContactData } from '@/interfaces/ui/sections/landing-page.interface';
import bgDesktop from '@images/contact/bgContactDesktop.jpg';
import bgMobile from '@images/contact/bgContactMobile.jpg';

// Import stylesheet
import '@/styles/home/_contact.scss';

interface Props {
	data: ContactData;
}

// Destructure the data prop
const { data } = Astro.props;
---

<!-- Contact Section -->
<Section
	id="contact-section"
	fullHeight={true}
	fullWidth={true}
	backgroundImageMobile={bgMobile}
	backgroundImageDesktop={bgDesktop}
    class="contact-section"
>
    <!-- Background overlay handled in SCSS -->
    <div class="contact-section__bg-overlay"></div>

	<!-- Top decorative line -->
	<div class="contact-section__top-line"></div>

	<StyledContainer variant="contact-section">
		<Container>
			<!-- Section Title -->
			<h2 class="contact-section__title">
				{data.title}
			</h2>

			<!-- Section Subtitle -->
			<h3 class="contact-section__subtitle">
				{data.subtitle}
			</h3>

			<!-- Contact Form Component -->
			<ContactForm client:visible />
		</Container>
	</StyledContainer>

	<!-- Scroll Action to return to pricing section -->
	<ActionIcon
		icon="ArrowUpIcon"
		variant="scroll"
		href="#pricing"
		color="secondary"
		title="Regresar a ver nuestras ofertas"
		className="contact-section__scroll-action"
	/>
</Section>
