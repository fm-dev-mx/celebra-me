---
/**
 * src/sections/Hero.astro
 */
import ActionBase from '@components/common/actions/ActionBase.astro';
import ActionIcon from '@components/common/actions/ActionIcon.astro';
import Section from '@components/layout/Section.astro';
import SectionTitle from '@components/typography/SectionTitle.astro';
import SectionSubtitle from '@components/typography/SectionSubtitle.astro';
import WhatsAppButton from '@components/ui/WhatsAppButton.tsx';
import Logo from '@components/ui/Logo.astro';
import type { HeroData } from '@/interfaces/ui/sections/landing-page.interface';

interface Props {
	data: HeroData;
}

const { data } = Astro.props;
---

<Section
	id="hero-section"
	backgroundImageDesktop={data.backgroundImage.desktopUrl}
	backgroundImageMobile={data.backgroundImage.mobileUrl}
	fullWidth
	fullHeight
	class="hero-section"
>
	<div class="hero-content">
		<!-- Title with premium styling -->
		<SectionTitle
			margin="mb-0"
			align="text-center"
			size="text-2xl sm:text-3xl md:text-4xl lg:text-5xl"
			color="text-white"
			extraClass="hero-title"
		>
			{data.title}
		</SectionTitle>

		<!-- Responsive logo -->
		<div class="hero-logo-container">
			<Logo variant="hero" altText="Celebra-me" class="hero-logo" />
		</div>

		<!-- Subtitle -->
		<SectionSubtitle
			size="text-lg sm:text-xl md:text-2xl"
			align="text-center"
			color="text-gray-100"
			margin="mb-0"
			extraClass="hero-subtitle"
		>
			{data.subtitle}
		</SectionSubtitle>

		<!-- CTA Buttons -->
		<div class="hero-cta-wrapper">
			<WhatsAppButton client:idle />
			<ActionBase as="a" href={data.secondaryCtaUrl || '#'} variant="primary" color="secondary">
				{data.secondaryCtaLabel}
			</ActionBase>
		</div>

		<!-- Social Proof -->
		{data.socialProofText && (
			<div class="hero-social-proof">
				<span>{data.socialProofText}</span>
			</div>
		)}
	</div>

	<!-- Scroll button -->
	<ActionIcon
		icon="ArrowDownIcon"
		variant="scroll"
		color="primary"
		as="a"
		href="#services-section"
		title="Conoce mÃ¡s"
	/>
</Section>
