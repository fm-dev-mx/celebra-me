---
// src/components/invitation/ThankYou.astro
import '@/styles/invitation/_thank-you.scss';
import OptimizedImage from '@/components/common/OptimizedImage.astro';
import type { ImageAsset } from '@/lib/assets/AssetRegistry';

interface Props {
	message: string;
	closingName: string;
	image?: string | ImageAsset;
	variant?: string;
}

const { message, closingName, image, variant = 'standard' } = Astro.props;
---

<section id="thank-you-section" class="thank-you-section" data-variant={variant}>
	<div class="thank-you-content">
		{
			image && (
				<div class="photo-frame">
					<div class="glimmer-effect" />
					<OptimizedImage
						imagePath={image}
						alt={closingName}
						width={400}
						height={400}
						class="photo-image"
					/>
					{variant === 'luxury-hacienda' && (
						<>
							<span class="rivet rivet--tl"></span>
							<span class="rivet rivet--tr"></span>
							<span class="rivet rivet--bl"></span>
							<span class="rivet rivet--br"></span>
						</>
					)}
				</div>
			)
		}

		<div class="message-container">
			<p class="thank-you-message">
				<span class="drop-cap">{message.charAt(0)}</span>{message.slice(1)}
			</p>
			<div class="signature-block">
				<p class="closing-name">
					{closingName}
				</p>
			</div>
		</div>

		<footer class="thank-you-footer">
			<p>Digital concierge by Celebra-me</p>
		</footer>
	</div>
</section>
