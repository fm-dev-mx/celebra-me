---
// src/components/invitation/Itinerary.astro
import '@/styles/xv/_itinerary.scss';
import TimelineItem from './TimelineItem';

interface ItineraryItemData {
	icon: 'waltz' | 'dinner' | 'toast' | 'cake' | 'party' | 'church' | 'reception' | 'music' | 'photo';
	label: string;
	description?: string;
	time: string;
}

interface Props {
	title?: string;
	items: ItineraryItemData[];
}

const { title = "Itinerario", items } = Astro.props;
---

<section class="itinerary" id="itinerary">
	<div class="itinerary__container">
		{title && (
			<div class="itinerary__header">
				<h2 class="itinerary__title font-heading-formal">{title}</h2>
				<div class="itinerary__header-flourish" aria-hidden="true">
					<span class="flourish-line"></span>
					<span class="flourish-diamond"></span>
					<span class="flourish-line"></span>
				</div>
			</div>
		)}

		<div class="itinerary__timeline">
			<div class="itinerary__line" aria-hidden="true"></div>

			<div class="itinerary__items">
				{items.map((item, index) => (
					<TimelineItem
						client:visible
						index={index}
						label={item.label}
						time={item.time}
						description={item.description}
						icon={item.icon}
						align={index % 2 === 0 ? 'left' : 'right'}
					/>
				))}
			</div>

			<div class="itinerary__line-end" aria-hidden="true"></div>
		</div>
	</div>
</section>
