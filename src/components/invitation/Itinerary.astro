---
// src/components/invitation/Itinerary.astro
import '@/styles/invitation/_itinerary.scss';
import TimelineList from './TimelineList';

interface ItineraryItemData {
	icon:
		| 'waltz'
		| 'dinner'
		| 'toast'
		| 'cake'
		| 'party'
		| 'church'
		| 'reception'
		| 'music'
		| 'photo'
		| 'boot'
		| 'western-hat'
		| 'taco'
		| 'tuba'
		| 'accordion';
	label: string;
	description?: string;
	time: string;
}

interface Props {
	title?: string;
	items: ItineraryItemData[];
	variant?: string;
}

const { title = "Itinerario", items, variant } = Astro.props;
---

<section class="itinerary" id="itinerary" data-variant={variant}>
	<div class="itinerary__container">
		{title && (
			<div class="itinerary__header">
				<h2 class="itinerary__title">{title}</h2>
				<div class="itinerary__header-flourish" aria-hidden="true">
					<span class="flourish-line"></span>
					<span class="flourish-diamond"></span>
					<span class="flourish-line"></span>
				</div>
			</div>
		)}

		<div class="itinerary__timeline">
			<div class="itinerary__line" aria-hidden="true"></div>

			<TimelineList client:visible items={items} variant={variant} />

			<div class="itinerary__line-end" aria-hidden="true"></div>
		</div>
	</div>
</section>
