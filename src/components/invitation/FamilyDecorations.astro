---
// src/components/invitation/FamilyDecorations.astro
interface Props {
	variant: string;
	component: 'bg' | 'frame' | 'card';
}

const { variant, component } = Astro.props;
---

{variant === 'luxury-hacienda' && (
	<>
		{component === 'bg' && (
			<>
				{/* Remaches estructurales de secci√≥n */}
				<div class="family__rivet family__rivet--tl" aria-hidden="true"></div>
				<div class="family__rivet family__rivet--tr" aria-hidden="true"></div>
				<div class="family__rivet family__rivet--bl" aria-hidden="true"></div>
				<div class="family__rivet family__rivet--br" aria-hidden="true"></div>

				{/* Textura de pergamino superpuesta */}
				<div class="family__parchment-overlay" aria-hidden="true"></div>

				{/* Patrones de cuero tooling */}
				<div class="family__leather-tooling family__leather-tooling--geometric" aria-hidden="true"></div>
			</>
		)}

		{component === 'frame' && (
			<>
				{/* Remaches del marco de la imagen */}
				<div class="family__frame-rivet family__frame-rivet--tl" aria-hidden="true"></div>
				<div class="family__frame-rivet family__frame-rivet--tr" aria-hidden="true"></div>
				<div class="family__frame-rivet family__frame-rivet--bl" aria-hidden="true"></div>
				<div class="family__frame-rivet family__frame-rivet--br" aria-hidden="true"></div>
			</>
		)}
	</>
)}
