---
// src/components/invitation/FamilyDecorations.astro
interface Props {
	variant?: string;
	component: 'bg' | 'frame';
}

const { variant = 'standard', component } = Astro.props;
---

{variant === 'luxury-hacienda' && component === 'bg' && (
	<>
		<div class="family__bg-vignette" aria-hidden="true"></div>
		<div class="family__ledger-lines" aria-hidden="true">
			<div class="family__ledger-line family__ledger-line--vertical"></div>
		</div>
	</>
)}

{variant === 'luxury-hacienda' && component === 'frame' && (
	<>
		<div class="family__frame-accent" aria-hidden="true"></div>
		<div class="family__corner family__corner--tl" aria-hidden="true"></div>
		<div class="family__corner family__corner--tr" aria-hidden="true"></div>
		<div class="family__corner family__corner--bl" aria-hidden="true"></div>
		<div class="family__corner family__corner--br" aria-hidden="true"></div>
	</>
)}
