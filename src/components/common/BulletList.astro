import '@/styles/common/_bullet-list.scss';

interface Props {
	items: Array<{ text: string; icon?: string }>;
	variant?: 'default' | 'compact';
	listClass?: string;
}

const {
	items = [],
	variant = 'default',
	listClass = '',
} = Astro.props;

const variantClass = variant === 'compact' ? 'bullet-list--compact' : '';
---

<ul class:list={['bullet-list', variantClass, listClass]}>
	{
		items.map((item) => (
