---
interface Props {
	size?: string;
	minWidth?: string;
	margin?: string;
	color?: string;
	align?: string;
	padding?: string;
	background?: string;
}

const props = Astro.props as Props;

const {
	size = "h-11 w-12",
	minWidth = "min-w-[32px]",
	margin = "mr-2",
	color = "text-primary",
	align = "items-center",
	padding = "p-2",
	background = "bg-secondary",
} = props;
---

<div class:list={[background, padding, minWidth, margin, "rounded-full", "flex", align, size, color]}>
	<slot />
</div>
