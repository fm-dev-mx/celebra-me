---
import { twMerge } from "tailwind-merge";
import type { HTMLAttributes } from "astro/types";

// Define the props interface, extending HTMLAttributes for div
interface Props extends HTMLAttributes<"div"> {
	flex?: string;
	size?: string;
	width?: string;
	height?: string;
	minWidth?: string;
	maxWidth?: string;
	margin?: string;
	color?: string;
	align?: string;
	padding?: string;
	rounded?: string;
	background?: string;
	shadow?: string;
	hover?: string;
	transition?: string;
}

// Destructure props with default values
const {
	flex = "flex",
	size,
	width = "w-12",
	height = "h-11",
	minWidth = "min-w-[32px]",
	maxWidth = "",
	margin = "",
	color = "text-primary",
	align = "items-center justify-center",
	padding = "p-2",
	background = "bg-secondary",
	rounded = "rounded-full",
	shadow = "",
	hover = "",
	transition = "transition-all duration-300",
	class: className,
	...rest
} = Astro.props;

// Combine classes using tailwind-merge to avoid conflicts
const wrapperClasses = twMerge(
	flex,
	size,
	width,
	height,
	minWidth,
	maxWidth,
	margin,
	color,
	align,
	padding,
	background,
	rounded,
	shadow,
	hover,
	transition,
	className,
);
---

<div class={wrapperClasses} {...rest}>
	<slot />
</div>
