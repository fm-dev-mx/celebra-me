---
// ImageWrapper.astro
// This component provides a flexible container for images with customizable layout options.

interface Props {
	width?: string; // Optional width, Tailwind classes for width
	height?: string; // Optional height, Tailwind classes for height
	padding?: string; // Optional padding, Tailwind classes for padding
	justify?: string; // Horizontal alignment, Tailwind classes for justification
	align?: string; // Vertical alignment, Tailwind classes for alignment
	margin?: string; // Optional margin, Tailwind classes for margin
	class?: string; // Optional custom class
}

// Destructure props with default values
const {
	width = "w-full",
	height = "h-auto",
	padding = "",
	justify = "justify-center",
	align = "items-center",
	margin = "",
	class: customClass = "",
} = Astro.props;

// Combine all classes into a single array
const classes = ["flex", width, height, padding, justify, align, margin, customClass].filter(
	Boolean,
);
---

{/* Render the wrapper div with combined classes */}
<div class:list={classes}>
	<slot />
</div>
