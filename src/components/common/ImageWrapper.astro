---
// ImageWrapper.astro
// This component provides a flexible container for images with customizable layout options.

interface Props {
	width?: string; // Optional width, using Tailwind classes
	height?: string; // Optional height, using Tailwind classes
	padding?: string; // Optional padding, using Tailwind classes
	justify?: string; // Horizontal alignment
	align?: string; // Vertical alignment
	margin?: string; // Optional margin, using Tailwind classes
	class?: string; // Additional custom classes
}

const {
	width = "w-full",
	height = "h-auto",
	padding = "",
	justify = "justify-center",
	align = "items-center",
	margin = "",
	class: customClass = "",
} = Astro.props;

// Combine all classes, filtering out any empty strings
const classes = ["flex", width, height, padding, justify, align, margin, customClass]
	.filter(Boolean)
	.join(" ");
---

<div class={classes}>
	<slot />
</div>
