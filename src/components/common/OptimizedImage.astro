---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Define the props interface for the component
interface Props {
	imagePath: ImageMetadata; // Allow for both local images and remote URLs
	alt: string;
	width?: number;
	height?: number;
	format?: "webp" | "avif" | "png" | "jpg";
	quality?: number;
}

// Destructure props with default values
const { imagePath, alt, width, height, format = "webp", quality = 80 } = Astro.props as Props;
---

<Image src={imagePath} alt={alt} width={width} height={height} format={format} quality={quality} />
