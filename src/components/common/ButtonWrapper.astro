---
import type { HTMLAttributes } from 'astro/types';

// Define the specific properties for the component
interface Props extends HTMLAttributes<'div'> {
  flex?: 'flex-row' | 'flex-col';
  margin?: string;
  align?: 'justify-start' | 'justify-center' | 'justify-end' | 'justify-between' | 'justify-around' | 'justify-evenly';
  gap?: string;
  minHeight?: string;
  minWidth?: string;
}

// Destructure props with default values
const {
  flex = "flex-row",
  margin = "mt-16",
  align = "justify-center",
  gap = "gap-x-6 md:gap-x-12",
  minHeight = "min-h-[48px]",
  minWidth = "min-w-[80px]",
  class: className,
  ...rest
} = Astro.props;

// Combine base classes with custom classes
const classes = [
  "flex",
  flex,
  margin,
  align,
  gap,
  minHeight,
  minWidth,
  className
].filter(Boolean).join(' ');
---

<div class={classes} {...rest}>
  <slot />
</div>
