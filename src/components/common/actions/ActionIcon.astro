---
import AppIcon from '../icons/AppIcon.astro';

interface _Props {
	icon: string;
	variant?: 'default' | 'scroll' | 'fixed-bottom-right';
	color?: 'primary' | 'secondary' | 'white';
	as?: 'a' | 'button';
	href?: string;
	title?: string;
	class?: string;
}

const {
	icon,
	variant = 'default',
	color = 'primary',
	as: Tag = 'a',
	href,
	title,
	class: className,
} = Astro.props as _Props;
---

<Tag
	href={href}
	title={title}
	class:list={[
		'flex items-center justify-center p-3 rounded-full transition-all duration-300',
		{
			'fixed bottom-8 right-8 bg-primary text-white shadow-lg z-50 hover:bg-primary-dark':
				variant === 'fixed-bottom-right',
			'border border-white/30 backdrop-blur-sm hover:bg-white/10': variant === 'scroll',
			'text-primary': color === 'primary',
			'text-secondary': color === 'secondary',
			'text-white': color === 'white',
		},
		className,
	]}
>
	<span class="sr-only">{title}</span>
	<AppIcon name={icon} class="w-6 h-6" />
</Tag>
