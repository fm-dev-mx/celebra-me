---
interface Props {
	padding?: string;
	margin?: string;
	width?: string;
	backgroundColor?: string;
	shadow?: string;
	relative?: string;
}

const props = Astro.props as Props;
const { width = "w-5/6 md:w-3/4", relative = "", margin = "mx-auto" } = props;
---

<div class=`flex flex-col items-center justify-center ${width} ${margin} ${relative} `>
	<slot />
</div>
