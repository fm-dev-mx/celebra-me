---
interface Props {
	columns?: number;
	gap?: string;
	class?: string;
	margin?: string;
	padding?: string;
	align?: string;
	extraClass?: string;
}

const {
	columns = 1,
	gap = 'gap-4',
	class: className,
	margin = '',
	padding = '',
	align = '',
	extraClass = '',
} = Astro.props;

const columnClass =
	{
		1: 'grid-cols-1',
		2: 'grid-cols-1 md:grid-cols-2',
		3: 'grid-cols-1 md:grid-cols-3',
		4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
	}[columns] || 'grid-cols-1';
---

<div class:list={['grid', columnClass, gap, margin, padding, align, className, extraClass]}>
	<slot />
</div>
