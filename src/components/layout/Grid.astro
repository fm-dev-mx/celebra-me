---
interface Props {
	columns?: number;
	gap?: string;
	padding?: string;
	align?: string;
	width?: string;
	maxWidth?: string;
}

const props = Astro.props as Props;
const {
	columns = 2,
	gap = "lg:gap-20",
	padding = "",
	align = "items-center",
	width = "w-full lg:w-3/4",
	maxWidth = "sm:max-w-80 lg:max-w-fit",
} = props;
---

<div class="flex flex-col items-center justify-center w-full">
	<div
		class={`flex flex-col align-center lg:grid lg:grid-rows-${columns} ${gap} ${padding} ${align} ${width} ${maxWidth}`}
	>
		<slot />
	</div>
</div>
