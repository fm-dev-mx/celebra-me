---
// src/frontend/layouts/Layout.astro
import '@fontsource-variable/rubik/index.css';
import SpeedInsights from '@vercel/speed-insights/astro';
import '@/frontend/styles/global.css';
import { SiteInfo } from '@interfaces/data/siteInfo.interface';
import { SeoData } from '@interfaces/data/seoData.interface';

interface Props {
	siteInfo: SiteInfo;
	seoData: SeoData;
}

const { siteInfo, seoData } = Astro.props;

// Datos personalizados para la invitación de Estefanía
const eventTitle = 'Celebra-me.com | XV Años de Estefanía';
const eventDescription = '¡Celebremos juntos una noche mágica el 8 de marzo de 2025!';
const eventImage =
	'https://res.cloudinary.com/dusxvauvj/image/upload/v1739392514/estefania_bar_ygcqei.jpg';
const eventUrl = 'https://celebra-me.com/XV-Estefania-Anguamea';
const eventType = 'website';
const eventImageAlt = 'Invitación digital de los XV Años de Estefanía';
const eventImageWidth = '1200';
const eventImageHeight = '630';
---

<!doctype html>
<html lang={siteInfo.lang ?? 'es'}>
	<head>
		<meta charset={siteInfo.charset ?? 'UTF-8'} />
		<title>{eventTitle}</title>
		<meta name="description" content={eventDescription} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="icons/favicon.svg" />
		<link rel="canonical" href={eventUrl} />

		<!-- Etiquetas Open Graph (para WhatsApp y Facebook) -->
		<meta property="og:title" content={eventTitle} />
		<meta property="og:description" content={eventDescription} />
		<meta property="og:image" content={eventImage} />
		<meta property="og:image:width" content={eventImageWidth} />
		<meta property="og:image:height" content={eventImageHeight} />
		<meta property="og:url" content={eventUrl} />
		<meta property="og:type" content={eventType} />

		<!-- Etiquetas Twitter Card (para Twitter y Telegram) -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={eventTitle} />
		<meta name="twitter:description" content={eventDescription} />
		<meta name="twitter:image" content={eventImage} />
		<meta name="twitter:image:alt" content={eventImageAlt} />
		<meta name="twitter:url" content={eventUrl} />

		<!-- JSON-LD para SEO estructurado -->
		<script type="application/ld+json" set:html={seoData} is:inline />

		<SpeedInsights />
	</head>
	<body>
		<slot />
		<style is:global>
			body {
				font-family:
					'Rubik Variable',
					-apple-system,
					BlinkMacSystemFont,
					'Segoe UI',
					Roboto,
					'Helvetica Neue',
					Arial,
					'Noto Sans',
					sans-serif,
					'Apple Color Emoji',
					'Segoe UI Emoji',
					'Segoe UI Symbol',
					'Noto Color Emoji';
			}
		</style>
	</body>
</html>
