---
/*
  This component displays a modern hero section with responsive images,
  refined typography, and smooth animations.
*/
import '@styles/XV/hero.xv.scss';
import '@styles/XV/sectionNavButton.xv.scss';
import Layout from '@layouts/Layout.astro';
import seoData from '@/core/data/seoData.json';
import siteInfo from '@/core/data/clients/siteInfo.XVEstefania.json';
import SectionNavButton from '@components/XV/components/SectionNavButton.xv.astro';

// Define images data to simplify markup
const images = [
	{
		mobile: 'https://res.cloudinary.com/dusxvauvj/image/upload/v1737591243/2_v6rorz.webp',
		desktop: 'https://res.cloudinary.com/dusxvauvj/image/upload/v1737591522/2_zilknu.webp',
		alt: 'Estefanía Anguamea posando con vestido rosa satinado y accesorios elegantes, con un fondo rústico de madera.',
	},
	{
		mobile: 'https://res.cloudinary.com/dusxvauvj/image/upload/v1737591244/3_zf64hg.webp',
		desktop: 'https://res.cloudinary.com/dusxvauvj/image/upload/v1737591522/3_fme7n1.webp',
		alt: 'Estefanía Anguamea posando con una sonrisa, junto a un jardín floreado y un muro de ladrillo.',
	},
	{
		mobile: 'https://res.cloudinary.com/dusxvauvj/image/upload/v1737591244/4_lxedjp.webp',
		desktop: 'https://res.cloudinary.com/dusxvauvj/image/upload/v1737591521/1_zdgkdg.webp',
		alt: 'Estefanía Anguamea posando con elegancia en un entorno natural.',
	},
];

// Event Date (static for now)
const eventDate = 'Sábado, 08 de Marzo 2025';
---

<Layout siteInfo={siteInfo} seoData={seoData} />

<section class="hero">
	<div class="hero__images">
		{
			images.map((img) => (
				<picture>
					<source media="(max-width: 768px)" srcset={img.mobile} />
					<img class="hero__image" src={img.desktop} alt={img.alt} />
				</picture>
			))
		}
	</div>

	<div class="hero__body">
		<div class="hero__content">
			<h1 class="hero__title">
				<span class="hero__title-xv">Mis XV</span>
				<span class="hero__title-line">Una Fiesta para Recordar</span>
			</h1>
			<p class="hero__subtitle">Estefanía Anguamea</p>
			<p class="hero__date">{eventDate}</p>
		</div>
	</div>
	<div class="hero__nav-button-container">
		<SectionNavButton
			href="#event-location"
			class="hero-section"
			section="Ubicación del evento"
		/>
	</div>
</section>
