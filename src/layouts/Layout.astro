---
/** src/Layouts/Layout.astro */
import '@/styles/global.scss';
import '@/styles/invitation/_envelope-reveal.scss';
import Header from '@/components/home/HomeHeader.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

// Typography: Core 5 Font System (@fontsource includes font-display: swap)
// Display Formal
import '@fontsource/cinzel/400.css';
import '@fontsource/cinzel/700.css';
// Display Elegant
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/700.css';
// Calligraphy
import '@fontsource/pinyon-script/400.css';
// Body Narrative
import '@fontsource/eb-garamond/400.css';
import '@fontsource/eb-garamond/500.css';
// UI/Functional
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/600.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
	hideHeader?: boolean;
}

const {
	title,
	description = 'Celebra.me - Eventos inolvidables',
	image = '/images/og-image.jpg',
	hideHeader = false,
} = Astro.props;

// Ensure full URL for social sharing
const ogImage = new URL(image, Astro.url);
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={ogImage} />
	</head>
	<body>
		{!hideHeader && <Header />}
		<main>
			<slot />
		</main>
		<Analytics />
		<SpeedInsights />
	</body>
</html>
