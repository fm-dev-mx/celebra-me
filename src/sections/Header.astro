---
/* src/sections/Header.astro */
/* This component represents the header section of the website, displaying the navigation and logo. */

import type { HeaderData } from "@/config/landing.interface";
import HeaderScroll from "@/components/ui/header/HeaderScroll";
import ToggleMobileMenu from "@/components/ui/header/ToggleMobileMenu";
import HeaderContainer from "@/components/layout/HeaderContainer.astro";
import NavBarDesktop from "@/components/ui/header/NavBarDesktop";
import NavBarMobile from "@/components/ui/header/NavBarMobile";

interface Props {
	data: HeaderData;
}

const { data } = Astro.props;
---

<header id="main-header" class="main-header">
	<div class="header-container">
		<!-- Handles header scroll behavior and mobile menu toggle button -->
		<HeaderScroll client:load />
		<ToggleMobileMenu client:load />

		<!-- Main menu container wrapping desktop and mobile navigation -->
		<nav class="main-menu-container">
			<!-- Desktop navigation (hidden on small screens) -->
			<NavBarDesktop data={data} client:load />

			<!-- Mobile navigation (hidden on large screens) -->
			<NavBarMobile data={data} client:load />
		</nav>
	</div>
</header>

<!-- Styles for responsive behavior will be handled in the CSS files -->
