---
import Action from "@/components/ui/Action.astro";
import ButtonWrapper from "@/components/ui/ButtonWrapper.astro";
import Icon from "@/components/ui/Icon.astro";
import IconWrapper from "@/components/ui/IconWrapper.astro";
import type { Icon as IconType } from "@/config/landing.interface";

interface Props {
	data: {
		icon?: string;
		title: string;
		subTitle: string;
		primaryCta: string;
		secondaryCta: string;
		highlightedTitle?: string;
		highlightedTitleSmall?: string;
	};
}

const { data } = Astro.props;

const heroSectionClass = "md:w-2/3 mt-20 mt-40 md:mt-60";
const titleClass = "text-center text-2xl lg:text-3xl xl:text-4xl 2xl:text-4xl";
const highlightedTitleClass =
	"text-primary font-semibold text-5xl lg:text-6xl xl:text-7xl 2xl:text-7xl ml-4 shadow-text";
const highlightedTitleSmallClass =
	"text-primary font-normal text-lg lg:text-2xl xl:text:3xl 2xl:text-4xl ml-3 shadow-text";
const subTitleClass =
	"text-primary opacity-80 mt-4 text-center font-thin text-xl md:text-2xl mb-20";
---

<section id="hero-section" class="flex justify-center h-screen">
	<section class={heroSectionClass}>
		<h1 class={titleClass}>
			<span class="text-primary opacity-80 mb-10 lg:mb-4 block font-light">
				{data.title}
			</span>
			<span class="flex flex-col lg:flex-row items-center justify-center">
				<IconWrapper background="bg-transparent" size="h-8 w-9" padding="p-0">
					<Icon icon={data.icon as IconType} />
				</IconWrapper>
				<div class="flex flex-row">
					<span class=`${highlightedTitleClass}`>
						{data.highlightedTitle}
					</span>
				</div>
				<div class="flex flex-row items-end mt-0 lg:mt-8">
					<span class={highlightedTitleSmallClass}>
						{data.highlightedTitleSmall}
					</span>
				</div>
			</span>
		</h1>
		<h2 class={subTitleClass}>{data.subTitle}</h2>
		<ButtonWrapper>
			<Action as="a" type="button1" href="#">{data.primaryCta}</Action>
			<Action as="a" type="button2" href="#">{data.secondaryCta}</Action>
		</ButtonWrapper>

		<ButtonWrapper margin="mt-60">
			<Action
				as="a"
				type={"downButton"}
				href="#services"
				title="Click para ir a la secciÃ³n de Servicios"
				iconName="ArrowDownIcon"
			/>
		</ButtonWrapper>
	</section>

	<style>
		@keyframes fadeIn {
			from {
				opacity: 0;
			}
			to {
				opacity: 1;
			}
		}

		#hero-section {
			opacity: 0;
			animation: fadeIn 0.8s ease-in-out forwards;
		}
	</style>
</section>
