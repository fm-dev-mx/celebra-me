---
import Action from "@/components/common/Action.astro";
import ActionWrapper from "@/components/common/ActionWrapper.astro";
import Icon from "@/components/common/Icon.astro";
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import type { FooterData } from "@/config/landing.interface";
import type { Icon as IconType } from "@/config/landing.interface";

// Define the props interface for type safety
interface Props {
	data: FooterData;
}

// Destructure the data prop
const { data } = Astro.props;
---

<!-- Footer component -->
<footer class="bg-black text-white w-full py-8">
	<!-- Use Section component for consistent padding and overflow handling -->
	<Section padding="pt-8">
		<Container>
			<div class="flex flex-col items-center">
				<!-- Logo and brand name -->
				<Action
					variant="text"
					href="#hero-section"
					class="text-white mb-4 flex items-center"
					title="Volver arriba"
				>
					<Icon icon={data.icon as IconType} class="h-8 w-8 mr-2" />
					<span class="text-md font-normal">{data.logo}</span>
				</Action>

				<!-- Footer description -->
				<p class="text-center text-primary mb-6">
					{data.description}
				</p>

				<!-- Footer navigation links -->
				<ActionWrapper
					flex="flex-row"
					align="justify-center"
					gap="gap-x-2 md:gap-x-8"
					margin="mb-6"
				>
					{
						data.links.map((link) => (
							<Action
								variant="text"
								href={link.href}
								class="text-[10px] md:text-lg text-white"
							>
								{link.label}
							</Action>
						))
					}
				</ActionWrapper>

				<!-- Social media icons -->
				<ActionWrapper gap="gap-x-2 md:gap-x-8" flex="flex-row">
					{
						data.socials.map((social) => (
							<Action
								variant="icon"
								href={social.href}
								title={social.icon}
								iconSize="w-7 h-7 md:w-8 md:h-8"
								target="_blank"
								icon={social.icon as IconType}
								title={social.title}
							/>
						))
					}
				</ActionWrapper>
			</div>
		</Container>
	</Section>
</footer>
