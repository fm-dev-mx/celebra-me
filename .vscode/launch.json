{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Run Astro Dev Server",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["exec", "astro", "dev"],
			"cwd": "${workspaceFolder}",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"outputCapture": "std"
		}
	]
}
